<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your information (items with * are required)." />

    <TextView
        android:id="@+id/tv_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name *"
        android:layout_below="@id/tv_reminder" />

    <EditText
        android:id="@+id/re_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fname"
        android:inputType="text"/>

    <TextView
        android:id="@+id/me_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_fname"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/tv_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last name *"
        android:layout_below="@id/me_1"/>

    <EditText
        android:id="@+id/re_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lname"/>

    <TextView
        android:id="@+id/me_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_lname"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of birth *"
        android:layout_below="@id/me_2"/>

    <EditText
        android:id="@+id/re_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dob"
        android:inputType="date"/>


    <TextView
        android:id="@+id/me_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_dob"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address *"
        android:layout_below="@id/me_3"/>

    <EditText
        android:id="@+id/re_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_add" />

    <TextView
        android:id="@+id/me_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_add"
        android:textColor="@color/colorAccent"/>


    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postcode *"
        android:layout_below="@id/me_4"/>

    <EditText
        android:id="@+id/re_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_post"/>

    <TextView
        android:id="@+id/me_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_post"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile number *"
        android:layout_below="@id/me_5"/>

    <EditText
        android:id="@+id/re_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mobile" />

    <TextView
        android:id="@+id/me_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_mobile"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email *"
        android:layout_below="@id/me_6" />

    <EditText
        android:id="@+id/re_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_email"/>

    <TextView
        android:id="@+id/me_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_email"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of residents *"
        android:layout_below="@id/me_7"/>

    <Spinner
        android:id="@+id/re_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/number"
        android:layout_below="@id/tv_no" />

    <TextView
        android:id="@+id/me_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_no"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/tv_prov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energy provider *"
        android:layout_below="@id/me_8"/>

    <Spinner
        android:id="@+id/re_prov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/providers"
        android:layout_below="@id/tv_prov" />

    <TextView
        android:id="@+id/me_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_prov"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username *"
        android:layout_below="@id/me_9"/>

    <EditText
        android:id="@+id/re_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user" />

    <TextView
        android:id="@+id/me_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_user"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password *"
        android:layout_below="@id/me_10"/>

    <EditText
        android:id="@+id/re_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/tv_pass"/>

    <TextView
        android:id="@+id/me_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_pass"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password*"
        android:layout_below="@id/me_11" />

    <EditText
        android:id="@+id/re_pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/tv_pass2"/>

    <TextView
        android:id="@+id/me_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_pass2"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/b_submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/me_12"
        android:layout_centerHorizontal="true"
        android:text="Submit"/>
</RelativeLayout>
</ScrollView>